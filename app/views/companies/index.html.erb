<p id="notice"><%= notice %></p>

<h1>Listado de Compa√±ias</h1>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Manager</th>
          <th>Status</th>
          <th>Terms</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.manager %></td>
            <td><%= company.status %></td>
            <td><%= company.terms %></td>
            <td><%= link_to 'Ver', company , class: 'btn btn-mini btn-default' %></td>
            <td><%= link_to 'Editar', edit_company_path(company),class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Borrar', company, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div>
<div>
  <%= link_to 'Agregar', new_company_path, class: 'btn btn-mini btn-default' %>
</div>

  <h3>Import Companies</h3>
  <%= form_tag import_companies_path,class: 'btn btn-default', multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload Companies",class: 'btn btn-default' %>
  <% end %>

  <h3>Download Companies</h3>
  <%= link_to "Report", companies_path(format: "csv"), class: 'btn btn-default' %>
</div>
