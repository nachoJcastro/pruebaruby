<p id="notice"><%= notice %></p>
<div class="row">
  <h1>Listado de Notas</h1>
  <div class="pull-right range-query">
  <%= form_tag invoices_path, method: :get do %>
    <%= text_field_tag 'search[date_from]',@search.date_from %>
    <%= text_field_tag 'search[date_to]',@search.date_to %>
    <%= submit_tag 'Search',class: 'btn search-button btn-default' %>
  <% end %>
  </div>
</div>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Compa√±ia</th>
          <th>Impuestos</th>
          <th>Vendedor</th>
          <th>Estado</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.date.strftime("%m/%d/%Y") %></td>
            <td><%= invoice.company %></td>
            <td><%= invoice.tax %></td>
            <td><%= invoice.salesperson %></td>
            <td><%= invoice.status_type %></td>
            <td><%= link_to 'Ver', invoice, class: 'btn btn-mini btn-default' %></td>
            <td><%= link_to 'Editar', edit_invoice_path(invoice), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Borrar', invoice, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>
<div>
  <%= link_to 'Agregar', new_invoice_path, class: 'btn btn-mini btn-default' %>
</div>
